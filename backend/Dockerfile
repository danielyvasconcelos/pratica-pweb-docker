# Use a imagem oficial do Node.js como base
FROM node:20-alpine

# Instala o bash, postgresql-client e curl para executar scripts e healthcheck
RUN apk add --no-cache bash postgresql-client curl

# Define o diretório de trabalho dentro do container
WORKDIR /app

# Copia os arquivos de dependências
COPY package*.json ./

# Instala as dependências (incluindo devDependencies para sequelize-cli)
RUN npm ci

# Copia o código fonte da aplicação
COPY . .

# Torna o script executável
RUN chmod +x start.sh

# Expõe a porta que a aplicação usa
EXPOSE 3000

# Define variáveis de ambiente padrão
ENV NODE_ENV=production
ENV PORT=3000

# Comando para iniciar a aplicação diretamente
CMD ["node", "server.js"]

